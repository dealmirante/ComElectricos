<!DOCTYPE html>
<html>
  <head>
  <%- include('../partials/head'); %> 
 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/products.css">

  </head>
  
  <body>
    <%- include('../partials/nav'); %> 
    <%- include('../partials/searchBar'); %>
    <link rel='stylesheet' href='/stylesheets/styleProductDetail.css' />
<!-- main-content -->

<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <br>
                <h4 class="products-title"><%= title2 %></h4>
            <br>
        </div>
         
            <% products.forEach     ( prd => { %>
            <div class="col-xl-4 col-lg-4 col-12 col-sm-6 col-lg-3">
            
                <section class="product-box">
                    <a href="/products/<%= prd.id %>">
                        <figure class="product-box_image">
                            <img src="/images/products/<%= prd.imageName%>" alt="imagen de producto" width="150" height="150">
                        </figure>
                        <article class="product-box_data">
                            <h6><%= prd.prodName %> </h6>
                            <h5>$ <%= prd.price %> </h5>
                            <!-- <span><%= prd.discount %>% OFF</span> -->
                        </article>
                    </a>
                </section>
        
            </div>
            <% }); %>
    
    </div>
</div>

</div>

</section>


    <!-- pie -->
<%- include('../partials/footer'); %>

</body>
</html>