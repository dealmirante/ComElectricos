<!DOCTYPE html>
<html>
  <head>
    <%- include('../partials/head'); %> 
 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel='stylesheet' href='/stylesheets/styleProductDetail.css' />
  </head>
  
  <body>
    <%- include('../partials/nav'); %> 
    <%- include('../partials/searchBar'); %>
<!-- main-content -->

<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Todos los Usuarios</h2>
        </div>
        <% masterusers.forEach( usr => { %>
        <div class="col-xl-3 col-12 col-sm-6 col-lg-3">
            
            <section class="product-box">
                <!-- <a href="/products/detail/<%= usr.image %>"> -->
                    <a href="/users/<%= usr.id %>">
                    <figure class="product-box_image">
                        <img src="/images/users/<%= usr.avatarName %>" alt="imagen de usuario">
                    </figure>
                    <article class="product-box_data">
                        <h2><%= usr.name %> </h2>
                        <span><%= usr.surname %></span>
                        <p><%= usr.email %></p>
                        <!-- <i class="fas fa-truck"></i> -->
                    </article>
                </a>
            </section>
           
        </div>
        <% }); %>
    </div>
</div>

</div>

</section>


    <!-- pie -->
<%- include('../partials/footer'); %>

</body>
</html>